CHROMIUM_DIRS	=	\
			./src	\
			./src-setup

all: chromium

chromium: $(CHROMIUM_DIRS) finish

$(CHROMIUM_DIRS): FORCE
	cd $@; test -f Makefile || qmake -o Makefile *.pro ; $(MAKE)

finish: 
	@echo ""
	@mv -vf ./src/chromium ./bin
	@mv -vf ./src-setup/chromium-setup ./bin
	@echo ""
	-ls --color ./bin/*
	@echo ""
	@echo "Now cd to ./bin and run chromium-setup!"
	@echo ""

clean:
	for i in $(CHROMIUM_DIRS); do ( cd $$i ; test -f Makefile || qmake -o Makefile *.pro ; $(MAKE) clean ) ; done
	-rm -f ./bin/*
	-rm -f *~ core
	-rm -f *.bck

distclean: clean
	@echo ""
	-rm -f scripts/*.bck
	@echo -e "\n ** freshen up the doc files **\n--------------------------------"
	-cp -f /home/mallan/HTML/mba/software/chromium/faq.htm ./data/doc
	-cp -f /home/mallan/HTML/mba/software/chromium/info.htm ./data/doc
	@echo ""
	-rm -f ./config.mak
	-rm -f ./Makefile
	@echo ""

FORCE:
